@model Booking_Management_system.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VENUE_NAME)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VENUE_NAME)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LOCATION)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LOCATION)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAPACITY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAPACITY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IMAGE_URL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IMAGE_URL)
        </dd>
        <dt class="col-sm-2">
            Venue Image:
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.IMAGE_URL))
            {
                <img src="@Model.IMAGE_URL" alt="Venue Image" width="150" height="150" style="object-fit:cover; border-radius: 8px;" />
            }
            else
            {
                <span>No Image Available</span>
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.VENUE_ID">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
