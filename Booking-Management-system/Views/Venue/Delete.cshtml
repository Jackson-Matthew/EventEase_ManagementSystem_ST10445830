        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAPACITY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAPACITY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IMAGE_URL)
